entrypoint = "main.sql"
run = "sqlite3 --init main.sql"
modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[agent]
expertMode = true
integrations = ["javascript_openai:1.0.0", "stripe:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "app_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "next_dev"

[[workflows.workflow]]
name = "app_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node app.js"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "next_dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45569
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "start"]
build = ["npm", "run", "build"]
